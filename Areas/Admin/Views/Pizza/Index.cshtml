@model List<Pizza>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-black" style="font-size: 24px; ">
                Pizza List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Pizza" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Description
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.Name))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.Price zł</td>
                    <td>@obj.Description</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <div class="btn-group" role="group">
                                <a asp-controller="Pizza" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    Edit
                                </a>
                                <a asp-controller="Pizza" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    Delete
                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>