@model Pizza

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="test-primary">Delete</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" disabled type="text" class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" disabled type="text" class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" disabled type="text" class="form-control" />

        </div>
        <div class="col-6 col-md-3">
            <button type="submit" class="btn-primary form-control">Delete</button>
        </div>
        <a asp-controller="Pizza" asp-action="Index" class="btn btn-primary">
            Back
        </a>
    </div>
</form>